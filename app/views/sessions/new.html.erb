<h1>Sign in</h1>

<p>
  No account yet? <%= link_to "Sign up!", signup_path %>
</p>

<%= form_with(url: session_path, local: true) do |f| %>
  <%= f.label :login %>

  <%= f.text_field :login, autofocus: true, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.submit "Sign in" %>
<% end %>
