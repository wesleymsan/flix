<h1>Reviews for <%= link_to @movie.title, @movie %></h1>

<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= profile_image(review.user, 35) %>
      <%= render "shared/stars", percent: review.stars_as_percent %>
      <p>
        <%= link_to review.user.name, review.user %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
        <%= link_to "Edit", edit_movie_review_path(@movie, review), class: "edit" %>
        <%= link_to 'Delete', movie_review_path(@movie, review), class: 'delete', 
            method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
<section class="admin">
  <%= link_to 'Add New Review', new_movie_review_path, class: 'button' %>
</section>
</ul>
